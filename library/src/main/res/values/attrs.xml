<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TimePicker">
        <attr name="numbersCount" format="integer"/>
        <attr name="divisionCount" format="enum" >
            <enum name="twenty_four" value="24"/>
            <enum name="twelve" value="12"/>
            <enum name="sixty" value="60"/>
            </attr>
        <attr name="textSize" format="dimension"/>
        <attr name="clockColor" format="color"/>
        <attr name="startValue" format="integer"/>
        <attr name="textColor" format="color"/>
        <attr name="highlightColor" format="color"/>
        <attr name="gravity" format="enum">
            <enum name="left" value="1"/>
            <enum name="right" value="-1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="ClockFace">
        <attr name="hoursClockColor" format="color"/>
        <attr name="minutesClockColor" format="color"/>
        <attr name="hoursCount" format="integer"/>
        <attr name="circleRadius" format="integer"/>
        <attr name="numbersSize" format="dimension"/>
        <attr name="hoursTextColor" format="color"/>
        <attr name="minutesTextColor" format="color"/>
        <attr name="hoursHighlightColor" format="color"/>
        <attr name="minutesHighlightColor" format="color"/>
    </declare-styleable>
</resources>