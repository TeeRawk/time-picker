<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

    <com.yalantis.library.TimePicker
        android:id="@+id/hours_picker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:clockColor="@color/clockBG"
        app:numbersCount="24"
        app:selectedTextColor="@color/hoursSelectedColor"
        app:strokeColor="@color/hoursSelectedColor"/>

    <com.yalantis.library.TimePicker
        android:id="@+id/minutes_picker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:clockColor="@color/clockBG"
        android:clickable="false"
        app:gravity="right"
        app:numbersCount="60"
        app:selectedTextColor="@color/minutesSelectedColor"
        app:strokeColor="@color/minutesSelectedColor"/>

</LinearLayout>