<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorBg"
              android:orientation="vertical">

    <com.yalantis.library.ClockFace
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:hoursHighlightColor="@color/hoursSelectedColor"
        app:minutesHighlightColor="@color/minutesSelectedColor"
        app:hoursTextColor = "@color/textColor"
        app:minutesTextColor = "@color/textColor"
        app:hoursCount= "24"
        app:hoursClockColor = "@color/clockBG"
        app:minutesClockColor = "@color/clockBG"/>
</LinearLayout>
